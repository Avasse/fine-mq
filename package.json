{
  "name": "fine-mq",
  "version": "0.1.0",
  "description": "Manage media queries in JS with ease & have fun building responsive stuff (Vuejs straightforward compatibility).",
  "main": "dist/fine-mq.min.js",
  "module": "dist/fine-mq.es.js",
  "unpkg": "dist/fine-mq.min.js",
  "repository": "https://github.com/nash403/fine-mq.git",
  "author": "Honor√© Nintunze <nintu.lab@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build:all": "yarn clean && yarn build && yarn build:mq && yarn build:to-mq-string",
    "build": "bili",
    "build:to-mq-string": "bili src/to-mq-string.js --filename 'to-mq-string[suffix].js' --banner --moduleName toMqString",
    "build:mq": "bili src/mq.js --filename 'mq[suffix].js' --banner --moduleName Mq",
    "build:example": "poi build",
    "example": "poi",
    "release": "yarn build && release-it",
    "test": "ava"
  },
  "bili": {
    "moduleName": "fine-mq",
    "banner": true,
    "format": [
      "cjs",
      "umd",
      "umd-min",
      "es"
    ],
    "external": "vue"
  },
  "poi": {
    "entry": "example/index.js",
    "outDir": "example/dist",
    "fullBuild": true,
    "cleanOutDir": true,
    "html": {
      "template": "example/index.html"
    },
    "publicPath": "/fine-mq/"
  },
  "ava": {
    "require": [
      "esm",
      "./test/helpers/setup.js"
    ]
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.20",
    "ava": "^0.25.0",
    "bili": "^3.1.2",
    "browser-env": "^3.2.5",
    "esm": "^3.0.70",
    "poi": "^10.2.9",
    "release-it": "^7.4.7",
    "require-extension-hooks": "^0.3.2",
    "require-extension-hooks-babel": "^0.1.1",
    "require-extension-hooks-vue": "^1.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.3"
  }
}
