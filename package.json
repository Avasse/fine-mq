{
  "name": "mdqueries",
  "version": "0.1.0",
  "description": "Manage media queries in JS with ease & have fun building responsive stuff (Vuejs straightforward compatibility).",
  "main": "dist/mdqueries.js",
  "module": "dist/mdqueries.es.js",
  "repository": "https://github.com/nash403/mdqueries.git",
  "author": "Honor√© Nintunze <nintu.lab@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && yarn build && yarn build:to-mq",
    "build:mdqueries": "bili",
    "build:to-mq-string": "bili src/to-mq-string.js --filename 'to-mq-string[suffix].js' --banner --moduleName toMq",
    "build:mq-interface": "bili src/mq.js --filename 'mq-interface[suffix].js' --banner --moduleName MqInterface",
    "build:example": "poi build",
    "example": "poi",
    "release": "yarn build && release-it",
    "test": "ava"
  },
  "bili": {
    "moduleName": "mdqueries",
    "banner": true,
    "format": [
      "cjs",
      "umd",
      "umd-min",
      "es"
    ],
    "external": "vue"
  },
  "poi": {
    "entry": "example/index.js",
    "outDir": "example/dist",
    "html": {
      "template": "example/index.html"
    },
    "publicPath": "/mdqueries/"
  },
  "ava": {
    "require": [
      "esm",
			"./test/helpers/setup-browser-env.js"
    ]
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "bili": "^3.1.2",
    "browser-env": "^3.2.5",
    "esm": "^3.0.70",
    "poi": "^10.2.9",
    "release-it": "^7.4.7",
    "rimraf": "^2.6.2"
  }
}
